<div class="container mt-4">
  <div class="container pt-5">
    <div class="d-flex justify-content-center">
      <h2 class="mt-5">Animais Dispon√≠veis</h2>
    </div>
  </div>
  <br>
  <div>
    <%= link_to "New animal?", new_animal_path, class: "btn btn-secondary" %>
  </div>
  <br>
  <div class="row">
    <% if @animals.present? %>
      <% @animals.each do |animal| %>
        <% unless animal.adoption.present? %>
          <div class="col-6 mb-3">
            <div class="card-product">
              <%= cl_image_tag animal.photo.key, height: 300, width: 400, crop: :fill %>
              <div class="card-product-infos">
                <h2><%= animal.name.capitalize %></h2>
                <p><strong>Categoria:</strong> <%= animal.category %></p>
                <p><strong>Professor:</strong> <%= animal.birth_date %></p>
                <p><%= link_to "Details", animal_path(animal), class: "btn btn-primary" %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
